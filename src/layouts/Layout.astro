---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo3d.gif" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Sometype+Mono:ital,wght@0,400..700;1,400..700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	body {
		background-color: var(--bg);
		font-family: "Montserrat", sans-serif;
		color: var(--font);
		
		background: radial-gradient(125% 125% at 50% 10%, var(--bg) 40%, var(--naranja) 100%) fixed;
	}
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	:root {
		--bg: #070f2b;
		--rosa: #ee3d8f;
		--celeste: #37bbed;
		--verde-lima: #d7df23;
		--verde: #50b8b1;
		--morado: #9283be;
		--naranja: #e24f25;
		--amarillo: #ffd100;
		--font: #F4EDCC;
	}

	span.orange{
		color: var(--naranja);
	}
</style>
